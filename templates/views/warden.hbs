          <div class="card-body">
            <h5 class="card-title">Notice</h5>
            <p class="card-text">
              To update notice board click here
            </p>
            <form action="/uploadNotice" method="POST" enctype="multipart/form-data">
              <input type="file" name="notice">
              <button class="btn btn-primary" type="submit">Upload</button>
            </form>
          </div>
        </div>
      </div>
    </div>

